<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_backround_dark_theme"
    tools:context=".presentation.views.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-355dp"
        android:layout_marginEnd="-170dp"
        android:src="@drawable/moscow_map"
        app:civ_border_color="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/login_fragment_logo_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:src="@drawable/logo_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.surf2024.geobuddies.presentation.feature.GradientTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semibold"
            android:text="@string/brand_name"
            android:textColor="@color/cardview_dark_background"
            android:textSize="32sp"
            app:angle="45"
            app:centerColor="@color/center_gradient_color"
            app:endColor="@color/end_gradient_color"

            app:layout_constraintEnd_toEndOf="@+id/login_fragment_logo_imageview"
            app:layout_constraintHorizontal_bias="0.519"
            app:layout_constraintStart_toStartOf="@+id/login_fragment_logo_imageview"
            app:layout_constraintTop_toBottomOf="@+id/login_fragment_logo_imageview"
            app:startColor="@color/start_gradient_color"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_fragment_email_textInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:cursorColor="@color/cursor_color_dark_theme"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/fieldTextViewDarkMode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/gray_circle"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingVertical="0dp"
                android:textColorHint="@color/field_text_color_dark_theme" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_fragment_password_textInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:cursorColor="@color/cursor_color_dark_theme"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_fragment_email_textInput"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/fieldTextViewDarkMode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gray_circle"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingVertical="0dp"
                android:textColorHint="@color/field_text_color_dark_theme" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/login_fragment_sing_up_text_view"
            style="@style/LoginFragmentTextViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="19dp"
            android:text="@string/sign_up"
            app:layout_constraintStart_toStartOf="@+id/login_fragment_password_textInput"
            app:layout_constraintTop_toBottomOf="@+id/login_fragment_password_textInput" />

        <android.widget.Button
            android:id="@+id/login_fragment_login_button"
            style="@style/LoginAndSignUpTextButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/gradient_circle"
            android:gravity="center"
            android:text="@string/login_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_fragment_sing_up_text_view"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>